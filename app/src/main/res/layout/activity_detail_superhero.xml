<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/main"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".superheroapp.DetailSuperheroActivity">

  <ImageView
    android:id="@+id/ivSuperhero"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:scaleType="centerCrop"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />



<!-- app:cardBackgroundColor="@color/teal_200" durante el desarrollo aplico
este color para visualizar -->
  <androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="235dp"
    android:elevation="8dp"
    app:cardCornerRadius="22dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">



  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
      android:id="@id/tvSuperheroName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textSize="28dp"
      android:textStyle="bold"
      tools:text="holahola" />

    <TextView
      android:id="@+id/tvSuperheroRealName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textSize="18sp"
      android:textStyle="italic"
      android:textColor="@color/black"
      tools:text="holahola" />

    <TextView
      android:id="@+id/tvPublisher"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textSize="11sp"
      tools:text="holahola" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_marginTop="24dp"
      android:layout_marginHorizontal="16dp"
      android:layout_gravity="bottom"
      android:orientation="horizontal">

      <View
        android:id="@+id/viewIntelligence"
        android:layout_width="0dp"
        android:layout_gravity="bottom"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@color/superhero_stat_intelligence">
      </View>

      <View
        android:layout_gravity="bottom"
        android:id="@+id/viewStrength"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@color/superhero_stat_strength"></View>

      <View
        android:layout_gravity="bottom"
        android:id="@+id/viewSpeed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@color/superhero_stat_speed"></View>

      <View
        android:layout_gravity="bottom"
        android:id="@+id/viewDurability"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@color/superhero_stat_durability"></View>

      <View
        android:layout_gravity="bottom"
        android:id="@+id/viewPower"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@color/superhero_stat_power"></View>

      <View
        android:layout_gravity="bottom"
        android:id="@+id/viewCombat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@color/superhero_stat_combat"></View>

    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginHorizontal="16dp"
      android:layout_gravity="bottom"
      android:orientation="horizontal">


      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:textSize="10dp"
        android:text="Intelligence"
        android:singleLine="true"
        android:maxLines="1">
      </TextView>
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="Strength"
        android:textSize="10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:maxLines="1">
      </TextView>
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="Speed"
        android:textSize="10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:maxLines="1">
      </TextView>
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="Durability"
        android:textSize="10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:maxLines="1">
      </TextView>
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="Power"
        android:textSize="10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:maxLines="1">
      </TextView>
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="Combat"
        android:textSize="10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:maxLines="1">
      </TextView>

    </LinearLayout>

  </LinearLayout>


  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>